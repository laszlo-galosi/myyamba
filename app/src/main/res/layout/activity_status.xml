<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.largerlife.learndroid.myyamba.StatusActivity">

    <TextView
        android:id="@+id/tv_status_title"
        style="@style/tv_caption"
        android:text="@string/title_activity_status" />

    <Button
        android:id="@+id/btn_status_post"
        style="@style/btn_app"
        android:layout_below="@+id/tv_status_title"
        android:onClick="onClickTweet"
        android:text="@string/update_btn_post" />

    <EditText
        android:id="@+id/et_status"
        style="@style/edittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_status_post"
        android:enabled="true"
        android:hint="@string/update_et_hint"
        android:inputType="textMultiLine" />
</RelativeLayout>
